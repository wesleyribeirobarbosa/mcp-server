{
  "name": "smart-city-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Smart City IoT Data",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f mcp-server",
    "docker:restart": "docker-compose restart mcp-server",
    "docker:cleanup": "docker-compose down -v && docker system prune -f",
    "docker:status": "docker-compose ps",
    "docker:stdio": "docker exec -i smart-city-mcp-server node dist/server.js",
    "docker:shell": "docker exec -it smart-city-mcp-server /bin/sh",
    "docker:mongo": "docker exec -it smart-city-mongo mongosh -u cursor-mcp-client -p cursor-mcp-password",
    "setup": "./scripts/docker-mcp.sh start",
    "logs": "./scripts/docker-mcp.sh logs",
    "stop": "./scripts/docker-mcp.sh stop",
    "cleanup": "./scripts/docker-mcp.sh cleanup"
  },
  "keywords": [
    "mcp",
    "smart-city",
    "iot",
    "mongodb",
    "typescript"
  ],
  "author": "Smart City IoT Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "mongodb": "^6.3.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
